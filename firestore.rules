rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // قواعد الأمان لقاعدة البيانات
    
    // قاعدة بيانات الأساقفة
    match /bishops/{bishopId} {
      // السماح بالقراءة لجميع المستخدمين المصادق عليهم
      allow read: if request.auth != null;
      
      // السماح بالكتابة للمستخدمين المصادق عليهم فقط
      // يمكنك تعديل هذا الشرط حسب احتياجاتك
      allow write: if request.auth != null;
      
      // أو يمكنك تقييد الكتابة للمدير فقط:
      // allow write: if request.auth != null && request.auth.token.email == 'admin@bishops.com';
    }
    
    // قاعدة بيانات المستخدمين (إذا احتجت إليها مستقبلاً)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

